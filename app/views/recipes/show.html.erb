<div class="row g-5">
  <div class="col-md-8">
    <article class="blog-post">
      <h2 class="blog-post-title"><%= @recipe.title %></h2>
      <p class="blog-post-meta"><i><%= "by: " + @recipe.author  %> </i></p>
      <hr>
      <p>
        <%= "Prep time: " + @recipe.prep_time.to_s + " mins" %> </br>
        <%= "Cook time: " + @recipe.cook_time.to_s + " mins" %> </br>
      </p>   
            
      <%= image_tag(@recipe.image, class: "rounded float-end recipe_image_thumb d-block") %>
      
      <div class="p-4 mb-3 bg-light rounded">
        <% @ingredients.each do |ingredient| %>
          <ul>
            <li><%= ingredient.ingredient_name %></li>
          </ul>
        <% end %>
      </div> 
      <%= "Rating: " + @recipe.ratings.to_s %>
      </br>
      Category: <%=  link_to @recipe.category.category_name, recipes_path(category_id: @recipe.category_id) %>
      </br>
    </article>
      </br>
      <%= link_to 'Back', root_path, class: "btn btn-outline-secondary" %>        
  </div>
  <div class="col-md-4">
    <h4>Most recent recipes</h4>
    <% @recipes.each do |post| %>
      <div class="card sidebar_card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <span><i><%= "by: " + post.author %></i> </span></br>
          <%= link_to 'Read recipe', post, class: "btn btn-secondary" %>          
        </div>
      </div>
    <% end %>
  </div>
</div>
